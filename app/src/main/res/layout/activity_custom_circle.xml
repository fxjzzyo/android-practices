<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.CustomCircleActivity">

    <com.example.android_practice.view.CustomCircle
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circle_color="@color/colorPrimary"
        app:circle_x="@android:dimen/app_icon_size"
        app:circle_radius="@android:dimen/app_icon_size"
        app:circle_y="@android:dimen/app_icon_size"
        android:layout_gravity="center"
        />


</LinearLayout>